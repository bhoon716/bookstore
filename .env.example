# Server Configuration
SERVER_PORT=8080
TZ=Asia/Seoul

# Database Configuration (MySQL)
# Hostname 'db' is used within Docker Compose network
MYSQL_DATABASE=bookstore
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_ROOT_PASSWORD=password

# Spring Datasource (matches MySQL config)
SPRING_DATASOURCE_USERNAME=${MYSQL_USER}
SPRING_DATASOURCE_PASSWORD=${MYSQL_PASSWORD}
# Default URL provided for Docker Compose. Can be overridden.
SPRING_DATASOURCE_URL=jdbc:mysql://db:3306/bookstore?serverTimezone=Asia/Seoul&characterEncoding=UTF-8&allowPublicKeyRetrieval=true&useSSL=false

# JPA / Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_PROFILES_ACTIVE=prod

# Redis Configuration
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379
SPRING_DATA_REDIS_PASSWORD=

# JWT Configuration
# Minimum 32 bytes (256 bits) secret key base64 encoded
JWT_SECRET=your_jwt_secret_key_here_must_be_very_long_and_secure_at_least_32_bytes

# Docker Compose Configuration
# Container Names
CONTAINER_NAME_APP=bookstore-app
CONTAINER_NAME_DB=bookstore-db
CONTAINER_NAME_REDIS=bookstore-redis

# Image Tags
MYSQL_IMAGE_TAG=8.0
REDIS_IMAGE_TAG=alpine

# Host Ports Mapping
APP_PORT_HOST=8080
DB_PORT_HOST=3307

# CORS Configuration
# Comma separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:8080,http://localhost:3000
