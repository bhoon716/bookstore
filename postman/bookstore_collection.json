                    }
                },
                {
                    "name": "Login",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "let token = null;",
                                    "",
                                    "// 1) 응답 바디에 accessToken 필드가 있는 경우(확장용)",
                                    "try {",
                                    "  const jsonData = pm.response.json();",
                                    "  if (jsonData && jsonData.data && jsonData.data.accessToken) {",
                                    "    token = jsonData.data.accessToken;",
                                    "  }",
                                    "} catch (e) {",
                                    "  // JSON 파싱 실패 시 무시",
                                    "}",
                                    "",
                                    "// 2) Authorization 헤더에서 토큰 추출",
                                    "if (!token) {",
                                    "  const authHeader = pm.response.headers.get('Authorization');",
                                    "  if (authHeader && authHeader.startsWith('Bearer ')) {",
                                    "    token = authHeader.substring(7);",
                                    "  }",
                                    "}",
                                    "",
                                    "// 3) 토큰을 컬렉션 변수 및 환경 변수에 저장",
                                    "if (token) {",
                                    "  if (pm.collectionVariables) {",
                                    "    pm.collectionVariables.set('token', token);",
                                    "  }",
                                    "  if (pm.environment) {",
                                    "    try {",
                                    "      pm.environment.set('token', token);",
                                    "    } catch (e) {}",
                                    "  }",
                                    "  console.log('Token set to:', token);",
                                    "} else {",
                                    "  console.warn('No token found in response body or Authorization header');",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"P@ssw0rd!\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": "{{baseUrl}}/api/auth/login"
